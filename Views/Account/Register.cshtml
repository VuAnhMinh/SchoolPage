@using projectsem3.Models
@model projectsem3.Models.STUDENT
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!-- breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../Index/Index">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Register Form</li>
    </ol>
</nav>
<!-- breadcrumb -->
<!-- //banner -->
<!-- register -->
<div class="login-w3ls py-5">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="title text-capitalize font-weight-light text-dark text-center mb-5">
            register
            <span class="font-weight-bold">now</span>
        </h3>
        @if (ViewBag.Status != null)
        {
            <h5 class="title text-capitalize font-weight-light text-danger text-center mb-5"> @ViewBag.Status</h5>
        }
        <!-- content -->
        <div class="sub-main-w3 pt-md-4">
            @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)


                <div class="form-style-agile form-group">
                    <label>
                        Student ID
                        <i class="fas fa-user"></i>
                    </label>
                    @Html.TextBoxFor(u => u.StudentID, new { @placeholder = "StudentID", @class = "form-control", @required = "", @name = "Your id" })

                </div>
                <div class="form-style-agile form-group">
                    <label>
                        Email
                        <i class="fas fa-envelope"></i>
                    </label>
                    @Html.TextBoxFor(u => u.Email, new { @type = "email" })
                    @Html.ValidationMessageFor(u => u.Email)
                </div>
                <div class="form-style-agile form-group">
                    <label>
                        Password
                        <i class="fas fa-unlock-alt"></i>
                    </label>
                    @Html.PasswordFor(u => u.Password)
                    @Html.ValidationMessageFor(u => u.Password)
                </div>
                <div class="form-style-agile form-group">
                    <label>
                        Confirm Password
                        <i class="fas fa-unlock-alt"></i>
                    </label>
                    @Html.TextBox("ConfirmPassword", null, new { @type = "password" })
                </div>
                <!-- switch -->
                <ul class="list-unstyled list-login">
                    <li class="switch-agileits float-left">
                        <label class="switch  text-capitalize">
                            <input type="checkbox">
                            <span class="slider-switch slider-switch-2 round"></span>
                            I Accept to the Terms & Conditions
                        </label>
                    </li>
                </ul>
                <!-- //switch -->
                <input type="submit" value="Register">
            }
        </div>
        <!-- //content -->
    </div>
</div>
<!-- //register -->
