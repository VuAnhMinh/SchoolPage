@using projectsem3.Models
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <script>
        $(document).ready(function () {
            $("#Time").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: '1999:2020',
                defaultDate: new Date(1999, 01 - 01, 09),
            });
        });
    function Remove(data) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteCourse", "Admin")',
            data: JSON.stringify({ id: data }),
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            asyn: true,
            cache: false,
            processData: false,
            success: function (data) {
                alert(data);
            },
            error: function (err) {
                alert("error:"+err)
            }
        });
    }
    </script>
    <div id="page-wrapper">
        <div class="graphs">
            <h3 class="blank1">Course</h3>
            <div class="xs tabls">


                <div class="bs-example4" data-example-id="simple-responsive-table">

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Course Name</th>
                                    <th>Images</th>
                                    <th>Time</th>
                                    <th>Faculty Id</th>
                                    <th>Department Id</th>
                                    <th>Description</th>

                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var course = ViewBag.Course as List<COURSE>;}
                                @foreach (var courses in Model)
                                {
                                    <tr>
                                        <th scope="row">@courses.Id</th>
                                        <td>@courses.CourseName</td>
                                        <td><img src="../Content/@courses.Images" height="50" width="50"></td>
                                        <td>@courses.Time</td>
                                        <td>@courses.FacultyId</td>
                                        <td>@courses.DepartmentId</td>
                                        <td>@courses.Description</td>
                                        <td>
                                            <a href="../admin/UpdateCourse?id=@courses.Id" class="btn-success btn">Update</a>

                                        </td>
                                        <td>
                                            <a href="../Admin/AddCourse" class="btn-default btn">Add</a>
                                        </td>
                                        <td>
                                            <button class="btn-inverse btn" onclick="Remove(@courses.Id)">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.table-responsive -->



