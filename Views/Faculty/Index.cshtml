<!-- blog -->
<div class="blog-w3l py-5">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="title text-capitalize font-weight-light text-dark text-center mb-5">
            blog
            <span class="font-weight-bold">page</span>
        </h3>
        <div class="row blog-content pt-md-4">

            @for (int i = 0; i < 3; i++)
            {
                if (i >= Math.Ceiling((double)Model.Count / 3)) { break; }
                <!-- left side -->
                <div class="col-lg-8 blog_section">
                    @for (int j = 0; j < 3; j++)
                    {
                        if (i * 3 + j >= Model.Count) { break; }
                        <div class="card">
                            <img class="card-img-top" src="../content/@Model[i*3+j].Avatar" alt="">
                            <div class="card-body text-center">
                                <h6 class="blog-first text-dark">
                                    <i class="far fa-user mr-2"></i>@Model[i * 3 + j].FirstName @Model[i * 3 + j].LastName
                                </h6>
                                <ul class="blog_list my-3">
                                    <li>@Model[i * 3 + j].Birthday</li>
                                    <li class="mx-3">
                                        <a href="#">
                                            <i class="far fa-heart mr-1"></i>
                                            30
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comments mr-1"></i>
                                            18
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html" class="text-dark">Blog title here</a>
                                </h5>
                                <p class="card-text">
                                    @(new HtmlString(Model[i * 3 + j].Profiles))
                                </p>
                                <a href="single.html" class="btn btn-primary blog-button mt-3">Read More</a>
                            </div>
                        </div>
                    }
                <nav aria-label="Page navigation example">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                   new PagedListRenderOptions() {
                       LiElementClasses = new List<string> { "page-item page-link" },
                       LinkToPreviousPageFormat = "Previous",
                       LinkToNextPageFormat = "Next",
                       DisplayPageCountAndCurrentLocation = true,
                   })

                </nav>
                    <!-- //left side -->
                </div>
            }
            <!-- right side -->
