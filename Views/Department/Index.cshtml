@model IEnumerable<projectsem3.Models.COURSE>
@using projectsem3.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Language</li>
    </ol>
</nav>
<!-- breadcrumb -->
<!-- //banner -->
<!-- course-->
<div class="course-w3ls py-5">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="title text-capitalize font-weight-light text-dark text-center mb-sm-5 mb-4">
            Department -

            <span class="font-weight-bold">@ViewBag.departmentId[0].DepartmentName</span>
        </h3>
            <div class="row cource-list-agile pt-4">
                <div class="col-lg-7 agile-course-main">
                    <div class="w3ls-cource-first">
                        <img src="../Content/images/2.png" alt="" class="img-fluid img-poiscour mx-auto d-block mt-2"></img>
                        <div class="px-md-5 px-4  pb-md-5 pb-4">
                            <h3 class="text-dark">@ViewBag.courses[0].CourseName</h3>
                            <p class="mt-3 mb-4 pr-lg-5">@ViewBag.departmentId[0].Description</p>
                            <ul class="list-unstyled text-capitalize">
                                <li>
                                    <i class="fas fa-calendar-alt mr-3"></i>@ViewBag.courses[0].Time
                                </li>
                                <li class="my-3">
                                    <i class="fas fa-clock mr-3"></i>4 - 6 hours
                                </li>
                                <li>
                                    <i class="fas fa-users mr-3"></i>@ViewBag.departmentId[0].Seat
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 agile-course-main-2 mt-4">
                    <img src="../Content/@ViewBag.courses[0].Images" alt="" class="img-fluid">
                </div>
                <div class="buttons-w3ls">
                    <a class="btn button-cour-w3ls text-white" href="../course/index?id=@ViewBag.courses[0].Id" role="button">Learn More</a>
                    <a class="btn bg-dark text-white" href="../account/login" role="button">Apply Now</a>
                </div>
            </div>
            <div class="row cource-list-agile cource-list-agile-2">
                <div class="col-lg-5 agile-course-main-3 mt-4">
                    <img src="../Content/@ViewBag.courses[1].Images" alt="" class="img-fluid">
                </div>
                <div class="col-lg-7 agile-course-main text-right">
                    <div class="w3ls-cource-first">
                        <img src="../Content/images/2.png" alt="" class="img-fluid"></img>
                        <div class="px-md-5 px-4  pb-md-5 pb-4">
                            <h3 class="text-dark">@ViewBag.courses[1].CourseName</h3>
                            <p class="mt-3 mb-4 pl-lg-4">@ViewBag.departmentId[0].Description</p>
                            <ul class="list-unstyled text-capitalize">
                                <li>
                                    @ViewBag.courses[1].Time
                                    <i class="fas fa-calendar-alt ml-3"></i>
                                </li>
                                <li class="my-3">
                                    3 - 6 hours
                                    <i class="fas fa-clock ml-3"></i>
                                </li>
                                <li>
                                    @ViewBag.departmentId[0].Seat
                                    <i class="fas fa-users ml-3"></i>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="buttons-w3ls-2">
                    <a class="btn button-cour-w3ls text-white" href="../course/index?id=@ViewBag.courses[0].Id" role="button">Learn More</a>
                    <a class="btn bg-dark text-white" href="../account/login" role="button">Apply Now</a>
                </div>
            </div>

        
    </div>
</div>
<!-- //course-->
