                    </div>
                    <div class="leave-coment-form">
                        <h3 class="blog-title text-dark mb-4">Leave a Reply</h3>
                        @using (Html.BeginForm("AddFB", "Facilities", new { id = @ViewBag.facilitiesId[0].Id }, FormMethod.Post))
                        {

                            @Html.TextArea("description", null, new
                       {
                           @class = "form-control valid",
                           @data_val = "true",
                           @data_val_required = "Please ..."
                       })
                            <div class="mm_single_submit">
                                <input type="submit" value="Post Comment">
                            </div>
                        }
