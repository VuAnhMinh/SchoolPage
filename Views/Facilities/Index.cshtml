                            {

                                <div class="row comments-grid">
                                    <div class="col-3 comments-grid-left">
                                        <img src="../content/@feedback.STUDENT.Avatar" alt=" " class="img-thumbnail rounded-circle" />
                                    </div>
                                    <div class="col-8 comments-grid-right mt-3">
                                        <h4>@feedback.STUDENT.FirstName @feedback.STUDENT.LastName</h4>
                                        <ul class="my-2">
                                            <li class="font-weight-bold">
                                                @feedback.Time
